{% extends 'base.html.twig' %}

{% block title %}Modifier l'utilisateur{% endblock %}

{% block body %}
    <h1>Modifier l'utilisateur</h1>

    <form method="post">
        <div>
            <label for="name">Nom</label>
            <input type="text" id="name" name="name" value="{{ user.name }}" required>
        </div>

        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" value="{{ user.email }}" required>
        </div>

        <div>
            <label for="role">Rôle</label>
            <select id="role" name="role">
                <option value="ROLE_USER" {{ 'ROLE_USER' in user.roles ? 'selected' : '' }}>Utilisateur</option>
                <option value="ROLE_ADMIN" {{ 'ROLE_ADMIN' in user.roles ? 'selected' : '' }}>Administrateur</option>
            </select>
        </div>

        <button type="submit">Mettre à jour</button>
    </form>

    <a href="{{ path('user_profile', { id: user.id }) }}">Retour au profil</a>
{% endblock %}
