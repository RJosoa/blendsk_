{% extends 'base.html.twig' %}

{% block title %}Modifier le post{% endblock %}

{% block body %}
    <h1>Modifier le post</h1>

    <form method="post" action="{{ path('post_edit', {'id': post.id}) }}">
        <div>
            <label for="featureImage">Image principale</label>
            <input type="text" id="featureImage" name="featureImage" value="{{ post.featureImage }}" required>
        </div>

        <div>
            <label for="title">Titre</label>
            <input type="text" id="title" name="title" value="{{ post.title }}" required>
        </div>

        <div>
            <label for="description">Description</label>
            <textarea id="description" name="description" required>{{ post.description }}</textarea>
        </div>

        <div>
            <label for="content">Contenu</label>
            <textarea id="content" name="content" required>{{ post.content }}</textarea>
        </div>

        <button type="submit">Mettre Ã  jour</button>
    </form>

    <a href="{{ path('explorer') }}">Annuler</a>
{% endblock %}
